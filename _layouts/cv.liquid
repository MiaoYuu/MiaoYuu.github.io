---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.cv_pdf %}
      <a
        href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
        target="_blank"
        rel="noopener noreferrer"
        class="float-right"
        ><i class="fa-solid fa-file-pdf"></i> Download PDF</a>
    {% endif %}
  </header>

  <article>
    <div class="cv">
      <embed src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}" width="100%" height="800px" type="application/pdf">
    </div>
  </article>
</div>
